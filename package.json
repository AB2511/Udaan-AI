{
  "name": "udaan-ai-platform",
  "version": "1.0.0",
  "description": "AI-powered career guidance platform for Indian students",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "demo:setup": "node demo-setup.js",
    "demo:start": "node demo-start.js",
    "demo:check": "node demo-start.js --check",
    "kill:port": "node kill-port-3000.js",
    "start:safe": "node start-backend-safe.js",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "build:demo": "npm run build && echo 'Demo build ready!'",
    "start": "cd backend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:ai": "npm run test:ai:backend && npm run test:ai:frontend",
    "test:ai:backend": "cd backend && npm run test:ai",
    "test:ai:frontend": "cd frontend && npm run test:ai",
    "test:ai:unit": "cd backend && npm run test:ai:unit",
    "test:ai:integration": "cd backend && npm run test:ai:integration",
    "test:ai:components": "cd frontend && npm run test:ai:components",
    "test:ai:e2e": "cd frontend && npm run test:ai:e2e",
    "test:ai:coverage": "npm run test:ai:backend -- --coverage && npm run test:ai:frontend -- --coverage",
    "setup:production": "node scripts/setup-production.js",
    "deploy": "node scripts/deploy.js deploy",
    "deploy:status": "node scripts/deploy.js status",
    "rollback": "node scripts/rollback.js rollback",
    "rollback:list": "node scripts/rollback.js list",
    "monitoring:start": "node scripts/monitoring-daemon.js",
    "backup:start": "node scripts/backup-daemon.js",
    "backup:manual": "cd backend && npm run backup",
    "health:check": "curl -f http://localhost:5000/api/health",
    "logs:backend": "pm2 logs udaan-ai-backend",
    "logs:monitoring": "pm2 logs udaan-ai-monitoring",
    "test:integration": "node scripts/run-complete-integration-tests.js",
    "validate:deployment": "node scripts/final-integration-validation.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "career-guidance",
    "ai",
    "education",
    "react",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Udaan AI Team",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "mongoose": "^8.18.1"
  }
}
