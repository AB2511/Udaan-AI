{
  "environment": "production",
  "version": "1.0.0",
  
  "backend": {
    "port": 5000,
    "healthEndpoint": "/api/health",
    "processManager": "pm2",
    "clustering": true,
    "workers": "max"
  },
  
  "frontend": {
    "buildCommand": "npm run build",
    "outputDir": "dist",
    "staticFiles": true,
    "cdn": {
      "enabled": true,
      "provider": "aws-cloudfront"
    }
  },
  
  "database": {
    "migrationCommand": "npm run migrate",
    "seedCommand": "npm run seed:prod",
    "backupBeforeMigration": true,
    "connectionPooling": true
  },
  
  "monitoring": {
    "enabled": true,
    "alertsEnabled": true,
    "metricsCollection": true,
    "healthChecks": {
      "interval": 30,
      "timeout": 5000,
      "retries": 3
    },
    "prometheus": {
      "enabled": true,
      "port": 9090
    }
  },
  
  "logging": {
    "level": "info",
    "format": "json",
    "rotation": true,
    "retention": "30d",
    "elasticsearch": {
      "enabled": true,
      "index": "udaan-ai-logs"
    }
  },
  
  "security": {
    "helmet": true,
    "cors": {
      "enabled": true,
      "strictOrigins": true
    },
    "rateLimiting": {
      "enabled": true,
      "windowMs": 900000,
      "max": 100
    },
    "ssl": {
      "enabled": true,
      "redirect": true
    }
  },
  
  "performance": {
    "compression": true,
    "caching": {
      "enabled": true,
      "redis": true,
      "ttl": 3600
    },
    "clustering": {
      "enabled": true,
      "workers": "auto"
    }
  },
  
  "backup": {
    "enabled": true,
    "schedule": "0 2 * * *",
    "retention": {
      "daily": 7,
      "weekly": 4,
      "monthly": 12
    },
    "storage": {
      "type": "aws-s3",
      "encryption": true
    }
  },
  
  "rollback": {
    "enabled": true,
    "backupBeforeDeploy": true,
    "automaticRollback": false,
    "healthCheckTimeout": 300
  },
  
  "notifications": {
    "deployment": {
      "enabled": true,
      "channels": ["email", "slack"]
    },
    "alerts": {
      "enabled": true,
      "severity": ["high", "critical"]
    }
  },
  
  "features": {
    "careerRecommendations": {
      "enabled": true,
      "aiPowered": true,
      "caching": true
    },
    "skillAssessments": {
      "enabled": true,
      "adaptiveQuestioning": true,
      "timeLimit": 1800
    },
    "resumeAnalysis": {
      "enabled": true,
      "aiParsing": true,
      "virusScanning": true
    },
    "mockInterviews": {
      "enabled": true,
      "recordingEnabled": false,
      "aiAnalysis": true
    },
    "activityTracking": {
      "enabled": true,
      "realTimeUpdates": true,
      "analytics": true
    }
  }
}